{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar C++ com MinGW",
      "type": "shell",
      "command": "C:/mingw/bin/g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/output/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compila o arquivo C++ atual com suporte a debug (MinGW)"
    }
  ]
}
